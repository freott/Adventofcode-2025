{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug AOC Solution",
            "type": "debugpy",
            "request": "launch",
            "module": "run",
            "args": [
                "${input:day}",
                "${input:part}",
                "${input:testMode}"
            ],
            "console": "integratedTerminal",
            "justMyCode": true
        }
    ],
    "inputs": [
        {
            "id": "day",
            "type": "promptString",
            "description": "Day number (e.g., 6)",
            "default": "6"
        },
        {
            "id": "part",
            "type": "promptString",
            "description": "Part number (1 or 2)",
            "default": "1"
        },
        {
            "id": "testMode",
            "type": "pickString",
            "description": "Use test input?",
            "options": ["", "test"],
            "default": ""
        }
    ]
}
